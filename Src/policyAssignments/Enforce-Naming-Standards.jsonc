    "ExternalLoadBalancerNamingPrefix": "elb-*",
    "NetworkSecurityGroupNamingPrefix": "nsg-*",
    "VirtualNetworkNamingPrefix": "vnet-*",
    "AutomationNamingPrefix": "aa-*"
  },
