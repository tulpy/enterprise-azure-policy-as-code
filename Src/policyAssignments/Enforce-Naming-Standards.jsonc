  "nodeName": "/root",
  "assignment": {
    "name": "Enforce-Naming-Standards",
    "displayName": "Enforce Azure Naming Standards",
    "description": "Enforce Azure Naming Standards for key Azure resources to ensure consistency and compliance across the environment."
