    "policyType": "Custom",
    "policyDefinitionGroups": [],
    "policyDefinitions": [
      {
        "policyDefinitionReferenceId": "EnforceNamingAppGwy",
        "policyDefinitionName": "Enforce-Naming-Application-Gateways",
        "parameters": {
          "namingPrefix": {
            "value": "[parameters('AppGwyNamingPrefix')]"
          }
        }
      },
      {
        "policyDefinitionReferenceId": "EnforceNamingAutomation",
        "policyDefinitionName": "Enforce-Naming-Automation-Accounts",
        "parameters": {
          "namingPrefix": {
            "value": "[parameters('AutomationNamingPrefix')]"
          }
        }
      },
      {
        "policyDefinitionReferenceId": "EnforceNamingBastion",
        "policyDefinitionName": "Enforce-Naming-Azure-Bastion",
        "parameters": {
          "namingPrefix": {
            "value": "[parameters('BastionNamingPrefix')]"
          }
        }
      },
      {
        "policyDefinitionReferenceId": "EnforceNamingExpressRouteCircuit",
