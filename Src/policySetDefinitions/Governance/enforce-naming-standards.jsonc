  "name": "Enforce-Naming-Standards",
  "properties": {
    "description": "This policy initiative is a group of policies that enforce naming of key Azure Resources.",
    "displayName": "Enforce Azure Naming Standards",
    "metadata": {
      "category": "Governance",
      "version": "1.0.0",
      "source": "https://github.com/Insight-Services-APAC/azure-landing-zones-bicep/",
      "_deployed_by_insight": "true"
    },
    "parameters": {
      "AppGwyNamingPrefix": {
        "metadata": {
          "description": "The naming prefix for Azure Application Gateways."
        },
        "type": "String"
      },
      "AutomationNamingPrefix": {
        "metadata": {
          "description": "The naming prefix for Azure Automation Accounts."
        },
        "type": "String"
      },
      "BastionNamingPrefix": {
        "metadata": {
          "description": "The naming prefix for Azure Bastion Hosts."
