        "policyDefinitionName": "Enforce-Naming-Network-Security-Groups",
        "parameters": {
          "namingPrefix": {
            "value": "[parameters('NetworkSecurityGroupNamingPrefix')]"
          }
        }
      },
      {
        "policyDefinitionReferenceId": "EnforceNamingPublicIP",
        "policyDefinitionName": "Enforce-Naming-Public-IP-Addresses",
        "parameters": {
          "namingPrefix": {
            "value": "[parameters('PublicIpNamingPrefix')]"
          }
        }
