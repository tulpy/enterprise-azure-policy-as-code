      "LocalNetworkGatewayNamingPrefix": {
        "metadata": {
          "description": "The naming prefix for Azure Local Network Gateways."
        },
        "type": "String"
      },
      "LogAnalyticsWorkspaceNamingPrefix": {
        "metadata": {
          "description": "The naming prefix for Azure Log Analytics Workspaces."
        },
