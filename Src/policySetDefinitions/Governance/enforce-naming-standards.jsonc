      "RouteTableNamingPrefix": {
        "metadata": {
          "description": "The naming prefix for Azure Route Tables."
        },
        "type": "String"
      },
      "StorageAccountNamingPrefix": {
        "metadata": {
          "description": "The naming prefix for Azure Storage Accounts."
        },
        "type": "String"
      },
      "SubscriptionNamingPrefix": {
        "metadata": {
          "description": "The naming prefix for Azure Subscriptions."
        },
        "type": "String"
      },
      "VirtualNetworkGwyNamingPrefix": {
        "metadata": {
          "description": "The naming prefix for Azure Virtual Network Gateways."
